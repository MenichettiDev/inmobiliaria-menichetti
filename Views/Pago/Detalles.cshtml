@model InmobiliariaApp.Models.Pago

@{
    ViewData["Title"] = "Detalles del Pago";
}

<h1>Detalles del Pago</h1>

<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID Pago</dt>
        <dd class="col-sm-10">@Model.IdPago</dd>

        <dt class="col-sm-2">ID Contrato</dt>
        <dd class="col-sm-10">Contrato Nro: @Model.IdContrato</dd>

        <dt class="col-sm-2">Fecha Vencimiento</dt>
        <dd class="col-sm-10">@Model.FechaVencimiento.ToShortDateString()</dd>

        <dt class="col-sm-2">Fecha de Pago</dt>
        <dd class="col-sm-10">@Model.FechaPago</dd>

        <dt class="col-sm-2">Importe</dt>
        <dd class="col-sm-10">@Model.Importe.ToString("C")</dd>

        <dt class="col-sm-2">Detalle</dt>
        <dd class="col-sm-10">@Model.Detalle</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        @* Solo visible para administradores *@
        @if (User.IsInRole("Administrador"))
        {
            <dt>Creado por</dt>
            <dd>@ViewBag.CreadoPorNombre</dd>

            @* <dt>Modificado por</dt>
            <dd>@ViewBag.ModificadoPorNombre</dd> *@

            <dt>Eliminado por</dt>
            <dd>@ViewBag.EliminadoPorNombre</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Editar" asp-route-id="@Model.IdPago" class="btn btn-primary">Editar</a> |
    <a asp-action="Listar" class="btn btn-secondary">Volver a la Lista</a>
</div>
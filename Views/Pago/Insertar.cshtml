@model InmobiliariaApp.Models.Pago

@{
    ViewData["Title"] = "Insertar Pago";
}

<h1>Crear Pago</h1>
<p>Complete los campos para crear un nuevo pago. Favor de aclarar el concepto del pago.</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Insertar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdContrato" class="control-label">Contrato</label>
                <select asp-for="IdContrato" class="form-control" asp-items="ViewBag.Contratos"></select>
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Importe" class="control-label">Importe a abonar</label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Detalle" class="control-label">Detalle</label>
                <textarea asp-for="Detalle" class="form-control"></textarea>
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Listar" class="btn btn-secondary">Volver a la Lista</a>
                <input type="submit" value="Cargar Pago" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

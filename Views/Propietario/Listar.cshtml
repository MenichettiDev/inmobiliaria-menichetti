@model IEnumerable<InmobiliariaApp.Models.Propietario>

@{
    ViewData["Title"] = "Listar Propietarios";
}

<h1>Listar Propietarios</h1>

<p>
    <a asp-action="Insertar" class="btn btn-success">Crear Nuevo Propietario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Tel√©fono</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdPropietario</td>
                <td>@item.Dni</td>
                <td>@item.Apellido</td>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@item.IdPropietario" class="btn btn-info">Detalles</a> |
                    <a asp-action="Editar" asp-route-id="@item.IdPropietario" class="btn btn-secondary">Editar</a> |
                    <a asp-action="Eliminar" asp-route-id="@item.IdPropietario" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@model IEnumerable<InmobiliariaApp.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h1 class="mb-4"><i class="bi bi-person-circle"></i> Usuarios</h1>

<a asp-action="Insertar" class="btn btn-success mb-3">
    <i class="bi bi-person-plus-fill"></i> Agregar Usuario
</a>

<table class="table table-bordered table-hover shadow-sm align-middle bg-white table-striped">
    <thead class="table-dark">
        <tr>
            <th><i class="bi bi-envelope-fill"></i> Email</th>
            <th><i class="bi bi-shield-lock-fill"></i> Rol</th>
            <th><i class="bi bi-gear-fill"></i> Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Email</td>
                <td>@usuario.Rol</td>
                <td class="text-nowrap">
                    <a asp-action="Detalles" asp-route-id="@usuario.IdUsuario" class="btn btn-outline-info btn-sm" title="Ver">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Editar" asp-route-id="@usuario.IdUsuario" class="btn btn-outline-warning btn-sm" title="Editar">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@usuario.IdUsuario" class="btn btn-outline-danger btn-sm" title="Eliminar">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

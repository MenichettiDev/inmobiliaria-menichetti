@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@model InmobiliariaApp.Models.TipoInmueble

@{
    ViewData["Title"] = "Eliminar Tipo de Inmueble";
}

<h1>Eliminar Tipo de Inmueble</h1>

<h3>¿Estás seguro que deseas eliminar este tipo?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IdTipoInmueble</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
    </dl>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="IdTipoInmueble" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

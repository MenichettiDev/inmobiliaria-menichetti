@model IEnumerable<InmobiliariaApp.Models.TipoInmueble>

@{
    ViewData["Title"] = "Lista de Tipos de Inmueble";
}

<h1 class="mb-4"><i class="bi bi-house-door-fill"></i> Tipos de Inmueble</h1>

<p>
    <a asp-action="Insertar" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Nuevo Tipo
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th><i class="bi bi-gear-fill"></i> Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdTipoInmueble</td>
                <td>@item.Nombre</td>
                <td class="text-nowrap">
                    <a asp-action="Detalles" asp-route-id="@item.IdTipoInmueble" class="btn btn-outline-info btn-sm" title="Detalles">
                        <i class="bi bi-info-circle-fill"></i>
                    </a>
                    <a asp-action="Editar" asp-route-id="@item.IdTipoInmueble" class="btn btn-outline-warning btn-sm" title="Editar">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@item.IdTipoInmueble" class="btn btn-outline-danger btn-sm" title="Eliminar">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<InmobiliariaApp.Models.Inmueble>

@{
    ViewData["Title"] = "Lista de Inmuebles";
}

<h1>Lista de Inmuebles</h1>

<p>
    <a asp-action="Crear" class="btn btn-success">Crear Nuevo Inmueble</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID Inmueble</th>
            <th>Propietario</th>
            <th>Direcci√≥n</th>
            <th>Uso</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdInmueble</td>
                <td>@item.IdPropietario</td>
                <td>@item.Direccion</td>
                <td>@item.Uso</td>
                <td>@item.Ambientes</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.Estado</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@item.IdInmueble" class="btn btn-info">Detalles</a> |
                    <a asp-action="Editar" asp-route-id="@item.IdInmueble" class="btn btn-warning">Editar</a> |
                    @if (item.Activo == 1)
                    {
                        <form asp-action="BajaLogica" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.IdInmueble" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="AltaLogica" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.IdInmueble" />
                            <button type="submit" class="btn btn-success">Reactivar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
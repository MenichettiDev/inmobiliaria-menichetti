@model IEnumerable<InmobiliariaApp.Models.Inquilino>

@{
    ViewData["Title"] = "Listar Inquilinos";
}

<h1 class="mb-4"><i class="bi bi-person-fill"></i> Listar Inquilinos</h1>

<p>
    <a asp-action="Insertar" class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> Crear Nuevo Inquilino
    </a>
</p>

<table class="table table-bordered table-hover shadow-sm align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Tel√©fono</th>
            <th>Email</th>
            <th><i class="bi bi-gear-fill"></i> Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdInquilino</td>
                <td>@item.Dni</td>
                <td>@item.Apellido</td>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Email</td>
                <td class="text-nowrap">
                    <a asp-action="Detalles" asp-route-id="@item.IdInquilino" class="btn btn-outline-info btn-sm" title="Detalles">
                        <i class="bi bi-info-circle-fill"></i>
                    </a>
                    <a asp-action="Editar" asp-route-id="@item.IdInquilino" class="btn btn-outline-warning btn-sm" title="Editar">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@item.IdInquilino" class="btn btn-outline-danger btn-sm" title="Eliminar">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

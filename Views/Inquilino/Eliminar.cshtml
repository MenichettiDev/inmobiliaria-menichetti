@model InmobiliariaApp.Models.Inquilino

@{
    ViewData["Title"] = "Eliminar Inquilino";
}

<h1>Eliminar Inquilino</h1>

<h3>¿Está seguro de que desea eliminar este Inquilino?</h3>
<div>
    <h4>Inquilino</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IdInquilino</dd>
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.Dni</dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="IdInquilino" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Listar" class="btn btn-secondary">Volver a la Lista</a>
    </form>
</div>